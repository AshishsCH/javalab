#include <stdio.h> 
#include <stdlib.h> 
struct Node { 
    int data; 
    struct Node* next; 
}; 
struct Node* head = NULL; 
void insert(int x) { 
    struct Node* n = malloc(sizeof(struct Node)); 
    n->data = x; 
    n->next = NULL; 
    if (head == NULL) 
        head = n; 
    else { 
        struct Node* t = head; 
        while (t->next) t = t->next; 
        t->next = n; 
    }} 
void del(int pos) { 
    if (pos == 1) { 
        struct Node* temp = head; 
        head = head->next; 
        free(temp); 
        return;   } 
    struct Node* t = head; 
    for (int i = 1; i < pos - 1; i++) 
        t = t->next; 
    struct Node* temp = t->next; 
    t->next = temp->next; 
    free(temp); 
} 
 
void show() { 
    struct Node* t = head; 
    while (t) { 
        printf("%d -> ", t->data); 
        t = t->next; 
    } 
    printf("NULL\n"); 
} 
int main() { 
    insert(10); 
    insert(20); 
    insert(30); 
    show();     // 10 -> 20 -> 30 -> NULL 
    del(2); 
    show();     // 10 -> 30 -> NULL 
    return 0; 
} 
